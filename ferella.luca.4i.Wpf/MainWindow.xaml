<Window x:Class="ferella.luca._4i.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ferella.luca._4i.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Width="100" Click="Button_Click"></Button>
            <Button Width="100"></Button>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock x:Name="lblCounter1" FontSize="50"></TextBlock>
            <TextBlock x:Name="lblCounter2" FontSize="50"></TextBlock>
            <TextBlock x:Name="lblCounter3" FontSize="50"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
